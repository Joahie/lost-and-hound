<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width">
  <title>Sign In</title>
  <link href="/css/style.css" rel="stylesheet" type="text/css" />
  <script src="/js/script.js"></script>
  <link rel="icon" type="image/x-icon" href="TEMPLATE">

</head>

<body>
  <!--Header-->
  <%- include('partials/header.ejs') %>

  <!--Body text-->
  
  <section id = "sign-in">
    <form method = "POST" action = "/signin" class ="signin">      
      <div class = "content">
      <h1>Sign In</h1>
      <input required value = "<%=email%>" name="email" type="email" class="feedback-input" placeholder="Email" />
      <br>
      <input required value = "<%=password%>" name="password" type="password" class="feedback-input" placeholder="Password"/>
      <%if(emailNonexistent){%>
        <p id = "incorrect">There is no account with this email</p>
        <%}%>
      <%if(passwordWrong){%>
        <p id = "incorrect">The password is incorrect</p>
        <%}%>
  
      <br>
      <div class="button-container"><input id = "button" type="submit" value="Go"/></div>
      <h2 class="not-register">Not registered? <a href="/signup" class="sign-up">Sign up here</a></h2>

      
      </div>

    </form> 
  </div>
  </section>

  <!--Footer-->
  <%- include('partials/footer.ejs') %>

</body>

</html>

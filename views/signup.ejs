<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width">
  <title>Sign Up</title>
  <link href="/css/style.css" rel="stylesheet" type="text/css" />
  <script src="/js/script.js"></script>
  <link rel="icon" type="image/x-icon" href="TEMPLATE">

</head>

<body>
  <!--Header-->
  <%- include('partials/header.ejs') %>

  <!--Body text-->
  
  <section id = "sign-up">
    <form method = "POST" action = "/signup" class = "sign-up">      
      <div class = "content">
      <h1>Sign Up</h1>
      <%if(submitted){%>
        <h2>Your account has been successfully created. Click <a href="/">here</a> to return to the home page.</h2>
        <%}else{%>
      <input required value = "<%=name%>" name="name" type="text" class="feedback-input" placeholder="Full Name" />
      <br>
      <input required  value = "<%=email%>"name="email" type="email" class="feedback-input" placeholder="Email" />
      <br>
      <input required value = "<%=password1%>" name="password" type="password" class="feedback-input" placeholder="Password"/>
      <br>
      <input required value = "<%=password2%>" name="confirm_password" type="password" class="feedback-input" placeholder="Confirm password"/>
      <%if(alreadyExists){%>
        <p id = "incorrect">An account already exists under this email</p>
        <%}%>
      <%if(passwordWrong){%>
        <p id = "incorrect">Your passwords cannot be different</p>
        <%}%>
      <br>
      <input id = "button" type="submit" value="Go"/>
      <%}%>
    </div>

    </form> 

  </section>

  <!--Footer-->
  <%- include('partials/footer.ejs') %>

</body>

</html>
